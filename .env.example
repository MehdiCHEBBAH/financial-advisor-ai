# Financial Adviser AI - Environment Configuration
# Copy this file to .env.local and fill in your API keys

# =============================================================================
# LLM Provider API Keys (choose the providers you want to use)
# =============================================================================

# Groq API Key (recommended for development - fast and free tier available)
# Get your key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here

# OpenAI API Key
# Get your key at: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Google Generative AI API Key
# Get your key at: https://aistudio.google.com
GOOGLE_GENERATIVE_AI_API_KEY=your_google_api_key_here

# DeepSeek API Key
# Get your key at: https://platform.deepseek.com
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# =============================================================================
# Financial Data API Keys
# =============================================================================

# Mediastack API Key (for news search functionality)
# Get your key at: https://mediastack.com/ (Free: 100 requests/month)
MEDIASTACK_API_KEY=your_mediastack_api_key_here

# Marketstack API Key (for stock data functionality)
# Get your key at: https://marketstack.com (Free: 100 requests/month)
MARKETSTACK_API_KEY=your_marketstack_api_key_here

# =============================================================================
# LangSmith Configuration (for tracing and evaluation)
# =============================================================================

# LangSmith API Key
# Get your key at: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here

# LangSmith Project Name (optional - defaults to "financial-adviser-ai")
LANGSMITH_PROJECT=financial-adviser-ai

# LangSmith Environment (optional - defaults to "development")
# Options: development, staging, production
LANGSMITH_ENVIRONMENT=development

# Enable/disable LangSmith tracing (optional - defaults to true if API key is provided)
LANGSMITH_TRACING=true

# =============================================================================
# Application Configuration
# =============================================================================

# Next.js Environment
NODE_ENV=development

# Application URL (for production deployment)
NEXT_PUBLIC_APP_URL=http://localhost:3000
